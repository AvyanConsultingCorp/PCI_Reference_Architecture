{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "deploymentPrefix": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "resourceGroupPrefix": {
            "type": "string"
        },
        "environmentReference": {
            "type": "object"
        },
        "networkReference": {
            "type": "array"
        },
        "vmReference": {
            "type": "array"
        }
    },
    "variables": {
        "managerPort": "443",
        "heartbeatPort": "4120",
        "dsmAdminName": "testuser",
        "dsmAdminPassword": "Test_pass1",
        "dbName": "dsm",
        "dbAdminName": "testuser",
        "dbAdminPassword": "Test_pass1",
        "vmTDM": "[concat(parameters('deploymentPrefix'), '-trendmicro-vm')]",
        "nicTDM": "[concat(parameters('deploymentPrefix'), '-trendmicro-nic')]",
        "vmQualys": "[concat(parameters('deploymentPrefix'), '-qualys-vm')]",
        "nicQualys": "[concat(parameters('deploymentPrefix'), '-qualys-nic')]",
        "vmLogic": "[concat(parameters('deploymentPrefix'), '-alertlogic-vm')]",
        "nicLogic": "[concat(parameters('deploymentPrefix'), '-alertlogic-nic')]",
        "baseUrl": "https://gallery.azure.com/artifact/20151001/trendmicro.deep-security-manager-stdeep-security-manager.1.0.6/Artifacts",
        "vnetID": "[resourceId(concat(parameters('resourceGroupPrefix'), '-', parameters('deploymentPrefix'), '-networking'), 'Microsoft.Network/virtualNetworks', 'dev-security')]",
        "subnet1Ref": "[concat(variables('vnetID'), '/subnets/securitySubnet')]",
        "newsqlServerName": "[tolower(concat(parameters('resourceGroupPrefix'), parameters('deploymentPrefix'), 'sqltdm'))]",
        "deployment-api-version": "2015-11-01",
        "network-api-version": "2015-06-15",
        "compute-api-version": "2016-04-30-preview",
        "publisher": "trendmicro",
        "licenseMode": "10",
        "offerChoosed": "[variables('offerStandard_D2_v2')]",
        "offerStandard_D2_v2": {
            "vmSize": "Standard_D2_v2",
            "vmSku": "dxxn25d2v2",
            "product": "deep-security-vm"
        },
        "offerStandard_D3_v2": {
            "vmSize": "Standard_D3_v2",
            "vmSku": "dxxn50d3v2",
            "product": "deep-security-vm"
        },
        "offerStandard_D4_v2": {
            "vmSize": "Standard_D4_v2",
            "vmSku": "dxxn100d4v2",
            "product": "deep-security-vm"
        },
        "offerStandard_D5_v2": {
            "vmSize": "Standard_D5_v2",
            "vmSku": "dxxn200d5v2",
            "product": "deep-security-vm"
        },
        "linuxConfigurationChoosen": {
            "disablePasswordAuthentication": "false"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "name": "buildSQLServer",
            "apiVersion": "[variables('deployment-api-version')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('baseUrl'), '/database-new.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "newsqlServerName": {
                        "value": "[variables('newsqlServerName')]"
                    },
                    "existingSQLServerName": {
                        "value": ""
                    },
                    "dbAdminName": {
                        "value": "[variables('dbAdminName')]"
                    },
                    "dbAdminPassword": {
                        "value": "[variables('dbAdminPassword')]"
                    },
                    "sqlDBName": {
                        "value": "[variables('dbName')]"
                    }
                }
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('nicTDM')]",
            "apiVersion": "[variables('network-api-version')]",
            "location": "[parameters('location')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('subnet1Ref')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[variables('vmTDM')]",
            "apiVersion": "[variables('compute-api-version')]",
            "location": "[parameters('location')]",
            "plan": {
                "publisher": "[variables('publisher')]",
                "product": "[variables('offerChoosed').product]",
                "name": "[variables('offerChoosed').vmSku]"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('offerChoosed').vmSize]"
                },
                "osProfile": {
                    "computerName": "[variables('vmTDM')]",
                    "adminUsername": "testo",
                    "adminPassword": "!Q2w3e4r5t6y",
                    "linuxConfiguration": "[variables('linuxConfigurationChoosen')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('publisher')]",
                        "offer": "[variables('offerChoosed').product]",
                        "sku": "[variables('offerChoosed').vmSku]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(parameters('deploymentPrefix'),'-trendmicro-os-disk')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicTDM'))]"
                        }
                    ]
                }
            },
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('nicTDM'))]",
                "[concat('Microsoft.Resources/deployments/', 'buildSQLServer')]"
            ]
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(variables('vmTDM'),'/installDSM')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "properties": {
                "publisher": "Microsoft.OSTCExtensions",
                "type": "CustomScriptForLinux",
                "typeHandlerVersion": "1.2",
                "settings": {
                    "commandToExecute": "cp ../../config/0.settings /opt/trend/packages/dsm/default/"
                },
                "protectedSettings": {
                    "subscriptionId": "[subscription().subscriptionId]",
                    "vmName": "[variables('vmTDM')]",
                    "databaseName": "[variables('dbName')]",
                    "adminUserName": "[variables('dsmAdminName')]",
                    "adminPassword": "[variables('dsmAdminPassword')]",
                    "databaseUserName": "[variables('dbAdminName')]",
                    "databaseUserPassword": "[variables('dbAdminPassword')]",
                    "licenseMode": "[variables('licenseMode')]",
                    "databaseServer": "[reference('buildSQLServer').outputs.sqlServerFQDN.value]",
                    "location": "[parameters('location')]",
                    "managerPort": "[variables('managerPort')]",
                    "heartbeatPort": "[variables('heartbeatPort')]",
                    "vmFQDN": "[variables('vmTDM')]",
                    "databaseOption": "new",
                    "vmSize": "[variables('offerChoosed').vmSize]"
                }
            },
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', variables('vmTDM'))]"
            ]
        },
        {
            "apiVersion": "[variables('network-api-Version')]",
            "location": "[parameters('location')]",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('nicQualys')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('subnet1Ref')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "[variables('compute-Api-Version')]",
            "location": "[parameters('location')]",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[variables('vmQualys')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('nicQualys'))]"
            ],
            "plan": {
                "name": "qvsa-23",
                "product": "qualys-virtual-scanner-v23b",
                "publisher": "qualysguard"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('offerChoosed').vmSize]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicQualys'))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[variables('vmQualys')]",
                    "adminUsername": "testo",
                    "adminPassword": "!Q2w3e4r5t6y",
                    "customData": "IyBDT01NRU5UCg=="
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "qualysguard",
                        "offer": "qualys-virtual-scanner-v23b",
                        "sku": "qvsa-23",
                        "version": "latest"
                    },
                    "osDisk": {
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "name": "[concat(parameters('deploymentPrefix'),'-qualys-os-disk')]"
                    }
                }
            }
        },
        {
            "apiVersion": "[variables('network-api-Version')]",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('niclogic')]",
            "location": "[parameters('location')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('subnet1Ref')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "[variables('compute-api-Version')]",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[variables('vmlogic')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('niclogic'))]"
            ],
            "plan": {
                "name": "20215000100-tmpbyol",
                "publisher": "alertlogic",
                "product": "alert-logic-tm"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('offerChoosed').vmSize]"
                },
                "osProfile": {
                    "computerName": "[variables('vmlogic')]",
                    "adminUsername": "testo",
                    "adminPassword": "!Q2w3e4r5t6y"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "alertlogic",
                        "offer": "alert-logic-tm",
                        "sku": "20215000100-TMPBYOL",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(parameters('deploymentPrefix'),'-alertlogic-os-disk')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('niclogic'))]"
                        }
                    ]
                }
            }
        }
    ]
}