{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "deploymentPrefix": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "resourceGroupPrefix": {
            "type": "string"
        },
        "environmentReference": {
            "type": "object"
        },
        "networkReference": {
            "type": "array"
        },
        "vmReference": {
            "type": "array"
        }
    },
    "variables": {
        "nicName": "jumpboxNic",
        "addressSpace": "[parameters('networkReference')[1].subnets[0].addressSpacePrefix]",
        "substring": "[substring(variables('addressSpace'), 0, sub(length(variables('addressSpace')), 4))]",
        "staticIp": "[concat(variables('substring'), 4)]",
        "vnetID": "[resourceId(concat(parameters('resourceGroupPrefix'), '-', parameters('deploymentPrefix'), '-networking'), 'Microsoft.Network/virtualNetworks', 'dev-management')]",
        "subnetRef": "[concat(variables('vnetID'),'/subnets/', 'managementSubnet')]"
    },
    "resources": [
        {
            "apiVersion": "2016-03-30",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('nicName')]",
            "location": "[parameters('location')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[variables('staticIp')]",
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2016-04-30-preview",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('environmentReference').jumpbox]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces/', variables('nicName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_A2"
                },
                "osProfile": {
                    "computerName": "[parameters('environmentReference').jumpbox]",
                    "adminUsername": "testo",
                    "adminPassword": "!Q2w3e4r5t6y"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "name": "[concat(parameters('environmentReference').jumpbox, '/dsc')]",
                    "type": "Microsoft.Compute/virtualMachines/extensions",
                    "location": "[parameters('location')]",
                    "apiVersion": "2015-06-15",
                    "dependsOn": [
                        "[parameters('environmentReference').jumpbox]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Powershell",
                        "type": "DSC",
                        "typeHandlerVersion": "2.20",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "configuration": {
                                "url": "https://github.com/AvyanConsultingCorp/PCI_Reference_Architecture/raw/master/scripts/ssms.zip",
                                "script": "ssms.ps1",
                                "function": "ssms"
                            },
                            "configurationArguments": {}
                        },
                        "protectedSettings": {}
                    }
                }
            ]
        }
    ]
}