{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "deploymentPrefix": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "resourceGroupPrefix": {
            "type": "string"
        },
        "environmentReference": {
            "type": "object"
        },
        "networkReference": {
            "type": "array"
        },
        "vmReference": {
            "type": "array"
        }
    },
    "variables": {
        "addressSpace": "[parameters('networkReference')[1].subnets[0].addressSpacePrefix]",
        "substring": "[substring(variables('addressSpace'), 0, sub(length(variables('addressSpace')), 4))]",
        "staticIp": "[concat(variables('substring'), 4)]",
        "vnetID": "[resourceId(concat(parameters('resourceGroupPrefix'), '-', parameters('deploymentPrefix'), '-networking'), 'Microsoft.Network/virtualNetworks', 'dev-management')]",
        "subnetRef": "[concat(variables('vnetID'),'/subnets/', 'managementSubnet')]",
        "nsgRule": [
            {
                "name": "RDP",
                "properties": {
                    "protocol": "Tcp",
                    "sourcePortRange": "*",
                    "destinationPortRange": "3389",
                    "sourceAddressPrefix": "*",
                    "destinationAddressPrefix": "[variables('staticIp')]",
                    "access": "Allow",
                    "priority": 2010,
                    "direction": "Inbound"
                }
            }
        ],
        "paasPrefix": "[concat(parameters('resourceGroupPrefix'), '-', parameters('deploymentPrefix'))]",
        "omsName": "[concat(variables('paasPrefix'), '-oms')]"
    },
    "resources": [
        {
            "condition": false,
            "apiVersion": "2016-03-30",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(parameters('deploymentPrefix'), '-', parameters('environmentReference').jumpbox, '-nic')]",
            "location": "[parameters('location')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[variables('staticIp')]",
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2016-04-30-preview",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat(parameters('deploymentPrefix'), '-', parameters('environmentReference').jumpbox, '-VM')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces/', concat(parameters('deploymentPrefix'), '-', parameters('environmentReference').jumpbox, '-nic'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_A2"
                },
                "osProfile": {
                    "computerName": "[parameters('environmentReference').jumpbox]",
                    "adminUsername": "[parameters('environmentReference').serviceAccess]",
                    "adminPassword": "[parameters('environmentReference').serviceAccessPwd]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage",
                        "name": "[concat(parameters('deploymentPrefix'), '-', parameters('environmentReference').jumpbox, '-hdd')]"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(parameters('deploymentPrefix'), '-', parameters('environmentReference').jumpbox, '-nic'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[reference(resourceId(concat(parameters('resourceGroupPrefix'), '-', parameters('deploymentPrefix'), '-operations'), 'Microsoft.Storage/storageAccounts', concat(parameters('resourceGroupPrefix'), parameters('deploymentPrefix'), 'diagstor')), '2015-06-15').primaryEndpoints['blob']]"
                    }
                }
            },
            "resources": [
                {
                    "name": "dsc",
                    "type": "extensions",
                    "location": "[parameters('location')]",
                    "apiVersion": "2016-03-30",
                    "dependsOn": [
                        "[concat(parameters('deploymentPrefix'), '-', parameters('environmentReference').jumpbox, '-vm')]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Powershell",
                        "type": "DSC",
                        "typeHandlerVersion": "2.20",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "configuration": {
                                "url": "[concat(parameters('environmentReference').buildingBlocksEndpoint, 'packages/ssms.zip')]",
                                "script": "ssms.ps1",
                                "function": "ssms"
                            },
                            "configurationArguments": {
                                "domainName": "[parameters('environmentReference').domainName]"
                            }
                        },
                        "protectedSettings": {
                            "configurationArguments": {
                                "adminCreds": {
                                    "userName": "[parameters('environmentReference').serviceAccess]",
                                    "password": "[parameters('environmentReference').serviceAccessPwd]"
                                }
                            }
                        }
                    }
                }
            ]
        },
        {
            "name": "commonExtensions",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/virtualMachines/extensions', concat(parameters('deploymentPrefix'), '-', parameters('environmentReference').jumpbox, '-VM'), 'dsc')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('environmentReference').buildingBlocksEndpoint, 'application/nested_extensions.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "oms": {
                        "value": {
                            "id": "[reference(resourceId(concat(parameters('resourceGroupPrefix'), '-', parameters('deploymentPrefix'), '-operations'),'microsoft.operationalinsights/workspaces',variables('omsName')), '2015-03-20').customerId]",
                            "key": "[listKeys(resourceId(concat(parameters('resourceGroupPrefix'), '-', parameters('deploymentPrefix'), '-operations'),'microsoft.operationalinsights/workspaces',variables('omsName')), '2015-03-20').primarySharedKey]"
                        }
                    },
                    "vmName": {
                        "value": "[concat(parameters('deploymentPrefix'), '-', parameters('environmentReference').jumpbox, '-VM')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "nsgRuleForJumpbox",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[concat(parameters('resourceGroupPrefix'), '-', parameters('deploymentPrefix'), '-networking')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "type": "Microsoft.Network/networkSecurityGroups",
                            "name": "[concat(parameters('deploymentPrefix'), '-managementSubnet-nsg')]",
                            "apiVersion": "2016-03-30",
                            "location": "[parameters('location')]",
                            "properties": {
                                "securityRules": "[variables('nsgRule')]"
                            }
                        }
                    ]
                }
            }
        }
    ]
}