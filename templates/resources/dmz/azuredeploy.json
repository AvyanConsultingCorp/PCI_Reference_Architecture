{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "deploymentPrefix": {
            "defaultValue": "dev",
            "allowedValues": [
                "dev",
                "prod"
            ],
            "type": "string",
            "metadata": {
                "description": "Resources created will be prefixed with this."
            }
        },
        "BarracudaLicense": {
            "defaultValue": "byol",
            "allowedValues": [
                "byol",
                "hourly"
            ],
            "type": "string",
            "metadata": {
                "description": "Type of license for use in Barracuda."
            }
        },
        "BarracudaProduct": {
            "defaultValue": "waf",
            "allowedValues": [
                "waf",
                "barracuda-ng-firewall"
            ],
            "type": "string",
            "metadata": {
                "description": "Type of license for use in Barracuda."
            }
        },
        "resourceGroupPrefix": {
            "type": "string",
            "metadata": {
                "description": "Deployment name"
            }
        },
        "virtualMachineName01": {
            "type": "string",
            "defaultValue": "Barracuda-waf-byol-01"
        },
        "virtualMachineName02": {
            "type": "string",
            "defaultValue": "Barracuda-waf-byol-02"
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_D1"
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "badmin"
        },
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "dev-dmz"
        },
        "networkInterfaceName01": {
            "type": "string",
            "defaultValue": "nic-barracuda-waf-01"
        },
        "networkInterfaceName02": {
            "type": "string",
            "defaultValue": "nic-barracuda-waf-02"
        },
        "networkSecurityGroupName": {
            "type": "string",
            "defaultValue": "dev-dmzSubnet-nsg"
        },
        "adminPassword": {
            "type": "securestring",
            "defaultValue": "Admin1P@s$w0rd"
        },
        "subnetName": {
            "type": "string",
            "defaultValue": "dmzSubnet"
        },
        "publicIpAddressName": {
            "type": "string",
            "defaultValue": "PIP-Barracuda-waf-byol"
        },
        "bwafAvailSetName": {
            "type": "string",
            "defaultValue": "avset-waf"
        },
        "loadBalancerName": {
            "type": "string",
            "defaultValue": "lb-waf"
        }
    },
    "variables": {
        "vnetID": "[resourceId(concat(parameters('resourceGroupPrefix'), '-', parameters('deploymentPrefix'), '-networking'), 'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
        "subnetRef": "[concat(variables('vnetID'),'/subnets/', parameters('subnetName'))]",
        "loadBalancerID":"[resourceId('Microsoft.Network/loadBalancers', parameters('loadBalancerName'))]"
    },
    "resources": [
        {   "type":"Microsoft.Compute/availabilitySets",
            "name":"[parameters('bwafAvailSetName')]",
            "apiVersion": "2016-04-30-preview",
            "location":"[resourceGroup().location]",
            "comments":"This is the Availability Set for BWAF VM",
            "properties": {
                "platformFaultDomainCount": "2",
                "platformUpdateDomainCount": "5",
                "managed": "true"
            }
        },
        {   "name": "[parameters('virtualMachineName01')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2016-04-30-preview",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', parameters('networkInterfaceName01'))]",
                "[concat('Microsoft.Compute/availabilitySets/', parameters('bwafAvailSetName'))]"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "[parameters('virtualMachineName01')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "barracudanetworks",
                        "offer": "[parameters('BarracudaProduct')]",
                        "sku": "[parameters('BarracudaLicense')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "Standard_LRS"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaceName01'))]"
                        }
                    ]
                },
                "availabilitySet":{
                    "id":"[resourceId('Microsoft.Compute/availabilitySets',parameters('bwafAvailSetName'))]"
                }
            },
            "plan": {
                "name": "[parameters('BarracudaLicense')]",
                "publisher": "barracudanetworks",
                "product": "[parameters('BarracudaProduct')]"
            }
        },
        {   "name": "[parameters('virtualMachineName02')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2016-04-30-preview",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', parameters('networkInterfaceName02'))]",
                "[concat('Microsoft.Compute/availabilitySets/', parameters('bwafAvailSetName'))]"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "[parameters('virtualMachineName02')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "barracudanetworks",
                        "offer": "[parameters('BarracudaProduct')]",
                        "sku": "[parameters('BarracudaLicense')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "Standard_LRS"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaceName02'))]"
                        }
                    ]
                },
                "availabilitySet":{
                    "id":"[resourceId('Microsoft.Compute/availabilitySets',parameters('bwafAvailSetName'))]"
                }
            },
            "plan": {
                "name": "[parameters('BarracudaLicense')]",
                "publisher": "barracudanetworks",
                "product": "[parameters('BarracudaProduct')]"
            }
        },
        {   "name": "[parameters('networkInterfaceName01')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2016-09-01",
            "location": "[parameters('location')]",
            "dependsOn":[
                "[concat('Microsoft.Network/loadBalancers/', parameters('loadBalancerName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "loadBalancerBackendAddressPools": [
                            {
                                "id": "[concat(variables('loadBalancerID'),'/backendAddressPools/loadBalancerBackEnd')]"
                                }
                            ]
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('prv-test-10-dev-networking', 'Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroupName'))]"
                }
            }
        },
        {   "name": "[parameters('networkInterfaceName02')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2016-09-01",
            "location": "[parameters('location')]",
            "dependsOn":[
                "[concat('Microsoft.Network/loadBalancers/', parameters('loadBalancerName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig2",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "loadBalancerBackendAddressPools": [
                            {
                                "id": "[concat(variables('loadBalancerID'),'/backendAddressPools/loadBalancerBackEnd')]"
                                }
                            ]
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('prv-test-10-dev-networking', 'Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroupName'))]"
                }
            }
        },
        {   "name": "[parameters('publicIpAddressName')]",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2016-09-01",
            "location": "[parameters('location')]",
            "properties": {
                "publicIPAllocationMethod": "Static"
            }
        },
        {   "type":"Microsoft.Network/loadBalancers",
            "name":"[parameters('loadBalancerName')]",
            "apiVersion":"2017-04-01",
            "location":"[resourceGroup().location]",
            "comments":"This Load Balancer is used to access DMZ",
            "dependsOn":[
                "[concat('Microsoft.Network/publicIpAddresses/', parameters('publicIpAddressName'))]"
            ],
            "properties":{
                "frontendIPConfigurations":[
                {
                    "name":"loadBalancerFrontEnd",
                    "properties":{
                        "publicIPAddress":{
                            "id":"[resourceId('Microsoft.Network/publicIPAddresses/', parameters('publicIpAddressName'))]"
                        }
                    }
                }
                ],
                "backendAddressPools":[
                {
                    "Name": "loadBalancerBackEnd"
                }
                ]
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        }
    }
}