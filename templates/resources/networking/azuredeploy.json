{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "deploymentPrefix": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "resourceGroupPrefix": {
            "type": "string"
        },
        "environmentReference": {
            "type": "object"
        },
        "networkReference": {
            "type": "array"
        },
        "vmReference": {
            "type": "array"
        },
        "subnetLength": {
            "type": "int",
            "defaultValue": 9
        }
    },
    "variables": {
        "iterator": "https://paste.ee/r/oZiv0/0",
        "nsgURI": "https://paste.ee/r/G51IG/0",
        "vnetURI": "https://paste.ee/r/L1Xih/0",
        "peeringURI": "https://paste.ee/r/DKTdD/0"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "name": "[concat('deployNSG-', copyIndex())]",
            "apiVersion": "2016-09-01",
            "copy": {
                "name": "deployNSGs",
                "count": "[parameters('subnetLength')]"
            },
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('nsgURI')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "bossObject": {
                        "value": "[reference(concat('iterator-', length(parameters('networkReference')))).outputs.collection.value[copyIndex()]]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "deploymentPrefix": {
                        "value": "[parameters('deploymentPrefix')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "name": "iterator-0",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('iterator')]"
                },
                "parameters": {
                    "source": {
                        "value": []
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "name": "[concat('iterator-', copyIndex(1))]",
            "copy": {
                "name": "iterator",
                "count": "[length(parameters('networkReference'))]",
                "mode": "Serial"
            },
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('iterator')]"
                },
                "parameters": {
                    "source": {
                        "value": "[parameters('networkReference')[copyIndex()].subnets]"
                    },
                    "state": {
                        "value": "[reference(concat('iterator-', copyIndex())).outputs.collection.value]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "[concat('vnets-nested-', copyIndex())]",
            "apiVersion": "2016-09-01",
            "copy": {
                "name": "deployvnets",
                "count": "[length(parameters('networkReference'))]"
            },
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vnetURI')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "bossObject": {
                        "value": "[parameters('networkReference')[copyIndex()]]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "deploymentPrefix": {
                        "value": "[parameters('deploymentPrefix')]"
                    }
                }
            },
            "dependsOn": [
                "deployNSGs"
            ]
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "[concat('peerings-nested-', copyIndex())]",
            "apiVersion": "2016-09-01",
            "copy": {
                "name": "peering",
                "count": "[length(parameters('networkReference'))]"
            },
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('peeringURI')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "bossObject": {
                        "value": "[parameters('networkReference')[copyIndex()]]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            },
            "dependsOn": [
                "deployvnets"
            ]
        }
    ]
}